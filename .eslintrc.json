{
  "extends": [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "prettier",
    "react-hooks",
    "react"
  ],
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "browser": true,
    "jest": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "react/jsx-uses-vars": "off",
    "react/jsx-uses-react": "off",
    "semi": "error",
    "prefer-destructuring": "off",
    "max-len": [
      "off",
      {
        "code": 100,
        "ignoreUrls": true,
        "ignorePattern": "import"
      }
    ],
    "no-unused-vars": "off",
    "operator-linebreak": "off",
    "react-hooks/rules-of-hooks": "off",
    "react/jsx-closing-tag-location": 2,
    "react/jsx-closing-bracket-location": [
      2,
      {
        "nonEmpty": "tag-aligned"
      }
    ],
    "react/jsx-max-props-per-line": [
      2,
      {
        "maximum": 4,
        "when": "always"
      }
    ],
    "react/jsx-filename-extension": [
      2,
      {
        "extensions": [
          ".jsx"
        ]
      }
    ],
    "jsx-quotes": [
      "off",
      "prefer-double"
    ],
    "comma-dangle": [
      2,
      "always-multiline"
    ],
    "prefer-const": [
      "off",
      {
        "destructuring": "any",
        "ignoreReadBeforeAssign": false
      }
    ],
    "react/prop-types": [
      1
    ]
  },
  "overrides": [
    {
      "files": [
        "src/index.js"
      ],
      "rules": {
        "react/jsx-filename-extension": "off"
      }
    }
  ]
}
